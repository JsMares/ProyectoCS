<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LIBRERIA TORMENTA LITERARIA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">TORMENTA LITERARIA</a>
    </nav>
    
    <div class="container">
        <div class="col-md-5">
           <div class="card">
               <div class="card-body">
                   <form action="/add" method="post">
                    <div class="form-group">
                        <input type="text" name="titulo" placeholder="Titulo" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="autor" placeholder="Autor" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="date" name="publicacion" placeholder="Año de Publicacion" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="paginas" placeholder="Total de páginas" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="nacionalidad" placeholder="País de Origen" class="form-control">
                    </div>
                    <button class="btn btn-primary">Registrar</button>
                </form>
               </div>
           </div>
        </div>
        <div class="col-md-5">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Fecha de Publicacion</th>
                        <th>Total de Páginas</th>
                        <th>País de Origen</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < datos.length; i++){  %>
                        <tr>
                            <td><%= i+1  %></td>
                            <td><%= datos[i].titulo  %></td>
                            <td><%= datos[i].autor  %></td>
                            <td><%= datos[i].publicacion  %></td>
                            <td><%= datos[i].paginas  %></td>
                            <td><%= datos[i].nacionalidad  %></td>
                            <td>
                                <!--<a class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>-->
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    Eliminar
                                </button>
                                
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        </div>
                                        <div class="modal-body">
                                        Desea eliminar <%= datos[i].titulo%>
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <a type="button" class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>
                                        </div>
                                    </div>
                                    </div>
                                </div>

                                <a class="btn btn-primary" href="/editar/<%= datos[i].id %>">Editar</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    
    </body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>